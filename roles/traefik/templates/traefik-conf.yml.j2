---
api:
  dashboard: true
  debug: false

serversTransport:
  insecureSkipVerify: true

entryPoints:
  web:
    address: ":80"
  websecure:
    address: ":443"
    forwardedHeaders:
      trustedIPs:
        - "127.0.0.1/32"
        - "192.168.1.1"
  rtmp:
    address: ":1935"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    swarmMode: true
    watch: true
    network: {{traefik_network}}
  file:
    filename: "/config.yml"
    watch: true

certificatesResolvers:
  dnsChallenge:
    acme:
      email: "tboucher@live.com"
      storage: "/acme.json"
      dnsChallenge:
        provider: godaddy
        disablePropagationCheck: true
        delayBeforeCheck: 0

pilot:
    token: "0ae604b9-e403-4150-95c9-34fe538588db"

experimental:
  plugins:
    rewritebody:
      modulename: "github.com/traefik/plugin-rewritebody"
      version: "v0.3.1"